@charset "utf-8";
/* CSS Document */

.text-main{
	width:100%;
	margin:0 auto;
	}
input[type=text]{
	font-size:14px
}
input[type=radio]{
	width:15px;
	height:15px;
}
input[type=checkbox]{
	width:15px;
	height:15px;
}
.question{
	padding: 10px;
	border-bottom: 1px #C6D7F1 solid;
	}
.on{
	background: #E5F1FF;
}
.num{
	font-size: 15px;
	color:#2971BB;
}
.radio-text,.check-text,.fill-long{
	font-size:15px;
	}
.fill-short,.unit,.comma{
	font-size:15px;
	}
.check-item label{
	margin-left:5px;
    vertical-align: middle;
	}
.radio-item label{
	margin-left:5px;
    vertical-align: middle;
	}
.item2{
	font-size:15px;
	width:45%;
	display:inline-block;
	vertical-align:bottom;
	}
.item4{
	font-size:15px;
	width:24%;
	display:inline-block;
	}
.item1{
	font-size:15px;
	display:block
	}
.itemfree{
	font-size:15px;
	display:inline-block;
	}
.comma{
	display:inline;
	}
.fill-short{
	display:inline;
	}
.fill-short-input{
	margin:0 5px;
	}
.center{
	text-align:center;
	}
.unit{
	display:inline;
	}
textarea{
	width:90%;
	height:100px;
	padding:5px;
	}