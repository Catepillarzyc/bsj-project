@charset "utf-8";
/* CSS Document */

.text-main{
	width:1000px;
	margin:0 auto;
	background:#fff;
	}
input[type=text]{
	font-size:14px;
	text-indent:2px;
}
input[type=text]:focus {
	outline:1px solid #7dd0f1;
}
input[type=radio]{
	width:15px;
	height:15px;
}
input[type=checkbox]{
	width:15px;
	height:17px;
	vertical-align:sub;
}
.question{
	padding: 10px;
	padding-left:25px;
	}
.question-first {
	padding-top:30px;
}
.on{
	
}
.num{
	font-size: 15px;
	color:#2971BB;
}
.question .check-text {
	margin-top:20px;
}
.radio-text,.check-text,.fill-long{
	font-size:15px;
	}
.fill-short,.unit,.comma{
	font-size:15px;
	}
.check-item label{
	margin-left:5px;
    vertical-align: middle;
	}
.radio-item label{
	margin-left:5px;
    vertical-align: middle;
	}
.item2{
	font-size:15px;
	width:172px;
	display:inline-block;
	vertical-align:bottom;
	}
.item4{
	font-size:15px;
	width:24%;
	display:inline-block;
	}
.item1{
	font-size:15px;
	display:block
	}
.check-item .itemvc{
	width:100%;
}
.itemfree{
	font-size:15px;
	display:inline-block;
	}
.comma{
	display:inline;
	}
.fill-short{
	display:inline;
	}
.fill-short-input{
	margin:0 5px;
	margin-top:7px;
	}
.center{
	text-align:center;
	}
.unit{
	display:inline;
	}
textarea{
	width:90%;
	height:100px;
	padding:5px;
	}